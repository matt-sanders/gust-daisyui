        {
          "label": "Primary",
          "value": "tooltip-primary"
        },
        {
          "label": "Seconday",
          "value": "tooltip-secondary"
        },
        {
          "label": "Accent",
          "value": "tooltip-accent"
        },
        {
          "label": "Info",
          "value": "tooltip-info"
        },
        {
          "label": "Success",
          "value": "tooltip-success"
        },
        {
          "label": "Warning",
