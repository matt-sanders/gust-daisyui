{
  "id": "daisyui-checkbox",
  "displayName": "Checkbox",
  "description": "Checkboxes are used to select or deselect a value.",
  "category": "Daisy UI / Data Input",
  "tag": "div",
  "classNames": "form-control",
  "options": [
    {
      "type": "text",
      "label": "Value",
      "name": "value",
      "modify": "none",
      "value": ""
    },
    {
      "name": "size",
      "label": "Size",
      "modify": "none",
      "type": "select",
      "options": [
        {
          "label": "Default",
          "value": "checkbox-md"
        },
        {
          "label": "xs",
          "value": "checkbox-xs"
        },
        {
          "label": "sm",
          "value": "checkbox-sm"
        },
        {
          "label": "lg",
          "value": "checkbox-lg"
        }
      ]
    },
    {
      "name": "color",
      "label": "Color",
      "modify": "none",
      "type": "select",
      "options": [
        {
          "label": "Default",
          "value": ""
        },
        {
          "label": "Primary",
          "value": "checkbox-primary"
        },
        {
          "label": "Seconday",
          "value": "checkbox-secondary"
        },
        {
          "label": "Accent",
          "value": "checkbox-accent"
        },
        {
          "label": "Info",
          "value": "checkbox-info"
        },
        {
          "label": "Success",
          "value": "checkbox-success"
        },
        {
          "label": "Warning",
          "value": "checkbox-warning"
        },
        {
          "label": "Error",
          "value": "checkbox-error"
        }
      ]
    },
    {
      "type": "text",
      "label": "Field name",
      "name": "name",
      "modify": "none",
      "value": "",
      "prepopulate": "instanceId"
    }
  ],
  "children": [
    {
      "id": "daisyui-checkbox-label",
      "tag": "label",
      "classNames": "label cursor-pointer",
      "children": [
        {
          "id": "daisyui-checkbox-input",
          "tag": "input",
          "classNames": "checkbox",
          "attributes": [
            {
              "type": "value",
              "name": "type",
              "value": "checkbox"
            }
          ],
          "references": [
            {
              "updates": "attribute",
              "name": "name",
              "type": "option",
              "target": "name"
            },
            {
              "updates": "attribute",
              "name": "value",
              "type": "option",
              "target": "value"
            },
            {
              "updates": "classNames",
              "type": "option",
              "target": "size"
            },
            {
              "updates": "classNames",
              "type": "option",
              "target": "color"
            }
          ]
        },
        {
          "id": "daisyui-checkbox-label-text",
          "tag": "span",
          "classNames": "label-text flex-1 ml-2",
          "userSelect": true,
          "content": {
            "type": "value",
            "value": "Label text"
          }
        }
      ]
    }
  ]
}
